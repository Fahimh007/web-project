<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-800">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input    class="block w-full rounded-md outline-none px-4 py-3 my-1 bg-zinc-700" type="text" placeholder="Title goes here..." name="title">
                <textarea class="block w-full rounded-md outline-none px-4 py-3 my-1 bg-zinc-700 resize-none" placeholder="write your task details here..." name="details"></textarea>
                <input    class="mt-2 bg-blue-600 px-4 py-1.5 rounded-md" type="submit" value="Create Task">
            </form>
        </div>

        <div class="tasks p-10 flex gap-2.5 flex-wrap">
            <% if(files.length>0){ %>
                <% files.forEach(function(val){ %>
                    <div class="task min-w-71 px-3 py-3 rounded-md bg-zinc-700">
                        <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
                        <div class="flex w-full justify-between gap-10 item-center mt-2">
                            <a class="text-blue-500 inline-block " href="/files/<%= val %>">Read more</a>
                            <a class="text-zinc-400" href="/edit/<%= val %>">edit file name</a>
                        </div>
                    </div>
                <% }) %>
            <% } else{ %>
                <h3 class="text-zinc-400">No task yet</h3>
            <% } %>
        </div>
    </div>
</body>
</html>